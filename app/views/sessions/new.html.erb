<% provide :title, t(".login") %>
<h1><%= t ".login" %></h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <div class="forgot-password">
      <%= f.label :password %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember" %></span>
      <% end %>
      
      <div class="rh-blog-social">
        <ul class="event-sigle-btn social">
          <li><a class="" href="/auth/facebook">
            <i class="fa fa-facebook" aria-hidden="true"></i></a>
          </li>
          <li><a class="" href="/auth/google_oauth2">
            <i class="fa fa-google-plus" aria-hidden="true"></i></a>
          </li>
        </ul>
      </div>

      <div class="button-submit-default">
      <%= f.submit t(".login"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="sign-up-now">
      <%= t ".newuser" %>
      <%= link_to t(".signupnow"), signup_path %>
    </p>
  </div>
</div>
