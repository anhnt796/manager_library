<% provide :title, @book.title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @book.title %>
      </h1>
      <br>
      <%= t ".price" %>: <%= @book.price %>
      <br>
      <%= t ".isbn" %>: <%= @book.isbn %>
      <br>
      <%= t ".publisher" %>: <%= @book.publisher_name %>
      <br>
      <%= t ".category" %>: <%= @book.category_name %>
    </section>
  </aside>
</div>
