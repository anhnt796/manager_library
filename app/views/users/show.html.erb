<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>
        <%= @user.name %>
      </h3>
      <br>
      <% if @user.user? && current_user.current_user?(@user) %>
        <% if @user.card_activated? %>
          <h6><%= t ".card_information" %><h6><br>
          <%= Card.human_attribute_name :issued_date %>:
          <%= I18n.localize @user.card_issued_date %><br>
          <%= Card.human_attribute_name :expired_date %>:
          <%= I18n.localize @user.card_expired_date %>
        <% else %>
          <div class="register-card">
            <%= link_to t(".register"), register_path %>
          </div>
        <% end %>
      <% end %>
    </section>
  </aside>
</div>
