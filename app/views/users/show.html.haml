= provide :title, @user.name
.row
  %aside.col-md-4
    %section.user_info
      %h3= @user.name
      %br
      - if @user.user? && current_user.current_user?(@user)
        - if @user.card_activated?
          <h6><%= t ".card_information" %><h6><br>
          <%= t ".issued_date" %>
          <%= @user.card.issued_date %><br>
          <%= t ".expired_date" %>
          <%= @user.card.expired_date %>
        - else
          .register-card
            = link_to t(".register"), register_path
