<header class="navbar navbar-expand-sm fixed-top navbar-dark bg-dark">
  <div class="container">
    <%= link_to t("base_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to t("static_pages.home.page_title"),
          root_path, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to t("static_pages.help.page_title"),
          help_path, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to t("book"), books_path, class: "nav-link active" %></li>
        <% if logged_in? %>
          <li><%= link_to t("_header.user"),
            users_path,class: "nav-link active" %></li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle"
              data-toggle="dropdown">
              <%= t "_header.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("_header.profile"),
                current_user, class: "dropdown-item" %></li>
              <li><%= link_to t("_header.setting"),
                edit_user_path(current_user), class: "dropdown-item" %></li>
              <li class="divider"></li>
              <li><%= link_to t("_header.logout"),
                  logout_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("_header.login"),
            login_path, class: "nav-link active" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
