%header.rh
  %nav.rh.navbar.navbar-default
    .container
      .navbar-header
        %a.navbar-brand{href: "javascript:;"}= image_tag(Settings.IMAGE_LOGO)
      .collapse.navbar-collapse.rh-toggle#bs-example-navbar-collapse-1
        %ul.nav.navbar-nav.navbar-right.main-navbar
          %li= link_to t("static_pages.home.page_title"), root_path
          %li= link_to t("book"), books_path
          %li
            %a{href: "javascript:;"}= t "language.language"
            %ul.dropdown-nav.rh-drop-menu
              %li= link_to t("language.english"), locale: "en"
              %li= link_to t("language.vietnamese"), locale: "vi"
              %li= link_to t("language.japanese"), locale: "ja"

          - if user_signed_in?
            %li= link_to t("_header.user"), users_path
            %li= link_to t("_header.notifications"), notifications_path

            - if current_user.user?
              %li= link_to t("_header.borrowed_book"), registered_copies_path
            - elsif current_user.librarian?
              %li
                %a{href: "javascript:;"}= t "_header.confirm"
                %ul.dropdown-nav.rh-drop-menu
                  %li= link_to t("_header.book_confirm"), book_confirmations_path
                  %li= link_to t("_header.comment_confirm"), comment_confirmations_path

            %li
              %a{href: "javascript:;"}= t "_header.account"
              %ul.dropdown-nav.rh-drop-menu
                %li= link_to t("_header.profile"), current_user
                %li= link_to t("_header.setting"), edit_user_path(current_user)
                %li= link_to t("_header.logout"), destroy_user_session_path,
                  method: :delete
          - else
            %li= link_to t("_header.login"), new_user_session_path
