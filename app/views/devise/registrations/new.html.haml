.limiter
  .container-login100
    %div(class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54")
      %span(class="login100-form login100-form-title p-b-49")= t "users.new.signup"
          
      .login100-form
        = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
          = devise_error_messages! 
          %div(class="wrap-input100 m-b-23")
            %span.label-input100= f.label :email
            = f.email_field :email, autofocus: true, autocomplete: "email",
               class: "input100", placeholder: t("users.new.type_email")
                      
          %div(class="wrap-input100 m-b-23")
            %span.label-input100= f.label :password
            = f.password_field :password, autocomplete: "off",
              class: "input100", placeholder:  t("users.new.type_password")

          %div(class="wrap-input100 m-b-23")
            %span.label-input100= f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off",
              class: "input100", placeholder:  t("users.new.type_password")

          %br
          %br
          .container-login100-form-btn
            .wrap-login100-form-btn
              .login100-form-bgbtn
              = f.submit I18n.t("users.new.signup"), class: "login100-form-btn"

          %div(class="flex-col-c p-t-155")
            - if controller_name != "sessions"
              = link_to t("sessions.new.login"), new_session_path(resource_name), class: "txt2"
