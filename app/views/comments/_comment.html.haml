%div(class="record" id="record-#{comment.id}")
  %li
    = gravatar_for comment.user, size: Settings.SIZE_IMAGE_OPTION_SMALL
    %strong= comment.user.name
    %span(class="comment-content-#{comment.id}")
      = comment.content
    %br
    %small.comment-edit-delete
      - if comment.user == current_user
        = link_to t("comments._comment.edit"),
          edit_book_comment_path(@book, comment),
          remote: true
        = link_to t("comments._comment.delete"),
          [comment.book, comment], method: :delete, remote: true,
          data: {confirm: t("comments._comment.sure")}
        = t("comments._comment.submitted",
          s: time_ago_in_words(comment.created_at))
